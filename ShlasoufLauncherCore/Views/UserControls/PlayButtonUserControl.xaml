<UserControl x:Class="ShlasoufLauncherCore.Views.UserControls.PlayButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShlasoufLauncherCore.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Command="{Binding PlayClick}" Content="Jouer" Width="115" Height="45" Margin="0 0 15 0" Style="{StaticResource primaryButton}" ></Button>
    </StackPanel>
</UserControl>
